LASTTAG=`git describe --abbrev=0 --tags`
echo "Current version tag $LASTTAG"
if [ -z $2 ]; then
	NEWTAG=`newversion -x $LASTTAG`
else
	echo "Usage: pusher <override-comment> <override-version>"
	echo "Use version format vX.X.XX"
	NEWTAG=$2
fi

echo ">>>> git pull origin (CI might commit stuff)"
git pull origin
echo "Creating new version tag $NEWTAG"
# echo does generate an additional newline in version.php so php-fixer runs OK
echo "<?php\n// auto-generated by pusher\n\nreturn [\n\t'version'=>'$NEWTAG'\n];" > ./src/version.php
echo "Running style fix"
composer run fix
git add --all .
git commit -a -m "${1:-Release $NEWTAG}"
git tag "$NEWTAG"
echo ">>>> git push origin"
git push origin
echo -e ">>>> git push origin --tags "
git push origin --tags
